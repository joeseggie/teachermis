@model SubjectViewModel

@{
    ViewData["Title"] = "New Subject";
    var subjectCategories = ViewData["SubjectCategories"] as IEnumerable<SelectListItem>;
}

<h2>New Subject</h2>
<hr>

<div class="col-xs-offset-1 col-xs-9">
    <div class="panel panel-default">
        <div class="panel-heading">
            Subject Details
        </div>
        <div class="panel-body">
            <form asp-action="new" asp-controller="subjects" method="POST" role="form">
                <div class="form-horizontal" style="padding-left:10px; padding-right:10px;">
                    
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Description"></label>
                        <input type="text" class="form-control col-xs-10" asp-for="Description" placeholder="Description" />
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="SubjectCategoryId"></label>
                        <select asp-for="SubjectCategoryId" asp-items=@subjectCategories class="form-control">
                            <option>--- Select Subject Category ---</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-danger" value="Add Subject" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $('#collapseOne').removeClass('in');
        $('#collapseTwo').removeClass('in');
        $('#collapseThree').addClass('in');
        $('#collapseFour').removeClass('in');
    </script>
}
