@model DistrictViewModel

@{
    ViewData["Title"] = "Add District";
}

<h2>@ViewData["Title"]</h2>
<hr>

<div class="col-xs-offset-1 col-xs-9">
    <div class="panel panel-default">
        <div class="panel-heading">
            Add New District
        </div>
        <div class="panel-body">
            <form asp-action="add" asp-controller="districts" method="POST" role="form">

                <a asp-action="index" class="btn btn-default">&laquo; Back to list</a>

                <div class="form-horizontal" style="padding-left:10px; padding-right:10px;">                    
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Name"></label>
                        <input type="text" class="form-control col-xs-10" asp-for="Name" placeholder="District name" />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-danger" value="Add District" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $('#collapseOne').removeClass('in');
        $('#collapseTwo').removeClass('in');
        $('#collapseThree').removeClass('in');
        $('#collapseFour').removeClass('in');
        $('#collapseFive').addClass('in');
    </script>
}
