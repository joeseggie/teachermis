@model IEnumerable<DistrictViewModel>

@{
    ViewData["Title"] = "Districts";
}

<h2>@ViewData["Title"]</h2>
<hr>

<form asp-action="index" asp-controller="districts" method="GET" role="form">
    <div class="row">
        <div class="col-xs-12">
            <div class="input-group">
            <span class="input-group-btn">
                <input class="btn btn-primary" value="Search" type="submit" />
            </span>
            <input type="text" class="form-control" id="search" name="search" value=@ViewData["search"] placeholder="Search for district">
            </div>
        </div>
    </div>
</form>

<br>

@if(Model != null)
{
    <table class="table table-condensed table-stripped table-bordered table-responsive">
        <thead>
            <tr>
                <th class="col-xs-12">District</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var district in Model)
            {
                <tr>
                    <td class="col-xs-12"><a asp-action="details" asp-route-id=@district.DistrictId>@district.Name</a></td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts
{
    <script type="text/javascript">
        $('#collapseOne').removeClass('in');
        $('#collapseTwo').removeClass('in');
        $('#collapseThree').removeClass('in');
        $('#collapseFour').removeClass('in');
        $('#collapseFive').addClass('in');
    </script>
}
