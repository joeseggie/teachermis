@model IEnumerable<SubjectCategoryViewModel>

@{
    ViewData["Title"] = "Subject Categories";
}

<h2>@ViewData["Title"]</h2>
<hr>

<a asp-route="subjectcategory" asp-route-action="add" class="btn btn-default">Add Subject Category</a>

<br><br>

@if(Model != null)
{
    <table class=" table table-bordered table-condensed table-responsive table-striped">
        <thead>
            <tr>
                <th class="col-xs-9">Subject Category</th>
                <th class="col-xs-3 text-right">Category Salary</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var subjectCategory in Model)
            {
                <tr>
                    <td class="col-xs-9"><a asp-route="subjectcategory" asp-route-Id=@subjectCategory.Stub asp-route-action="category">@subjectCategory.Description</a></td>
                    <td class="col-xs-3 text-right">@subjectCategory.Salary.ToString("UGX 0,0")</td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts
{
    <script type="text/javascript">
        $('#collapseOne').removeClass('in');
        $('#collapseTwo').removeClass('in');
        $('#collapseThree').addClass('in');
        $('#collapseFour').removeClass('in');
    </script>
}
